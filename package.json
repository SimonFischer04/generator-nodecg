{
  "name": "generator-nodecg",
  "version": "1.2.0",
  "description": "Yeoman generator for NodeCG bundles",
  "homepage": "http://nodecg.com",
  "author": {
    "name": "Alex Van Camp",
    "email": "email@alexvan.camp",
    "url": "http://alexvan.camp"
  },
  "files": [
    "generators"
  ],
  "main": "generators\\index.js",
  "keywords": [
    "yeoman-generator",
    "nodecg",
    "bundle"
  ],
  "dependencies": {
    "chalk": "^2.0.0",
    "deep-extend": "^0.5.0",
    "generator-license": "^5.0.0",
    "generator-node": "^2.7.0",
    "git-config": "0.0.7",
    "github-username": "^4.1.0",
    "lodash": "^4.17.15",
    "mkdirp": "^0.5.1",
    "parse-author": "^2.0.0",
    "yeoman-generator": "^3.0.0",
    "yosay": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.43.1",
    "mocha": "^5.2.0",
    "mockery": "^2.1.0",
    "npm-name": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^5.0.2",
    "prettier": "^2.8.0",
    "standard-version": "^4.4.0",
    "yeoman-assert": "^3.0.0",
    "yeoman-test": "^1.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecg/generator-nodecg.git"
  },
  "scripts": {
    "lint": "npm-run-all -s lint:*",
    "lint:prettier": "prettier --check \"**/*.{json,md,yml,ts,tsx,js,jsx}\"",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "fix": "npm-run-all -s fix:*",
    "fix:prettier": "prettier --write \"**/*.{json,md,yml,ts,tsx,js,jsx}\"",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "test": "npm run lint && nyc --reporter=lcov mocha",
    "watch": "onchange --initial generators/**/*.js test/** -- nyc mocha",
    "report-coverage": "codecov",
    "prerelease": "npm t",
    "release": "standard-version",
    "postrelease": "npm publish && git push --follow-tags"
  },
  "license": "MIT"
}
